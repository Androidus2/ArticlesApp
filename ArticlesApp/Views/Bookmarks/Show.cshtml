@model ArticlesApp.Models.Bookmark

<h2>@Model.Name</h2>

@if (Model.ArticleBookmarks != null && Model.ArticleBookmarks.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Article Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var articleBookmark in Model.ArticleBookmarks)
            {
                <tr>
                    <td>
                        <a asp-controller="Articles" asp-action="Show" asp-route-id="@articleBookmark.ArticleId">
                            @articleBookmark.Article?.Title
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Bookmarks" asp-action="RemoveArticle" method="post">
                            <input type="hidden" name="articleBookmarkId" value="@articleBookmark.Id" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No articles in this bookmark.</p>
}
